{
  "name": "budibase-datasource-xata",
  "version": "1.0.1",
  "description": "An amazing Budibase datasource!",
  "main": "src/index.ts",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "node build.mjs",
    "watch": "nodemon --watch src --ext ts --exec 'NODE_ENV=dev pnpm build'",
    "check": "tsc --noEmit",
    "lint": "xo",
    "test": "NODE_OPTIONS='--loader=tsx --no-warnings' ava # https://github.com/avajs/ava/issues/2593#issuecomment-1524846453",
    "prepare": "husky install"
  },
  "dependencies": {
    "@budibase/types": "^2.11.45",
    "@xata.io/client": "^0.26.5",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "source-map-support": "^0.5.21",
    "type-fest": "^4.3.3",
    "undici": "^5.25.2",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@budibase/backend-core": "^2.11.45",
    "@types/lodash": "^4.14.199",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.6.3",
    "@types/tar": "^6.1.6",
    "@types/uuid": "^9.0.4",
    "ava": "^5.3.1",
    "esbuild": "^0.19.3",
    "husky": "^8.0.0",
    "nodemon": "^3.0.1",
    "tar": "^6.1.11",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "xo": "^0.56.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "@xata.io/client@0.26.5": "patches/@xata.io__client@0.26.5.patch",
      "@budibase/nano@10.1.2": "patches/@budibase__nano@10.1.2.patch"
    }
  },
  "xo": {
    "prettier": true,
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "error"
      ],
      "@typescript-eslint/no-unnecessary-condition": [
        "error"
      ],
      "@typescript-eslint/no-non-null-assertion": [
        "error"
      ],
      "unicorn/prefer-module": [
        "off"
      ],
      "n/prefer-global/process": [
        "error",
        "always"
      ],
      "capitalized-comments": [
        "off"
      ],
      "no-unused-vars": [
        "error"
      ],
      "default-case": [
        "off"
      ],
      "no-labels": [
        "off"
      ],
      "no-return-assign": [
        "off"
      ]
    }
  },
  "ava": {
    "extensions": {
      "mts": "module"
    }
  }
}
